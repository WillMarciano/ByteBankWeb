@model IEnumerable<ByteBank.Aplicacao.DTO.ContaCorrenteDTO>

    @{
        ViewData["Title"] = "Contas Correntes";
    }

    <h4>Contas-Correntes</h4>

    <p>
        <a asp-action="Create" class="btn btn-sm btn-outline-info">Adicionar Conta-Corrente</a>
    </p>
    <table class="table table-white table-striped">
        <thead>
            <tr>
                <th>
                    Agência
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PixConta)
                </th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Agencia.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PixConta)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
